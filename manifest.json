{
  "name": "Gridy",
  "version": "1.0.1",
  "description": "Grid system for layout blocks alignment.",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "storage", "declarativeContent"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png"
    }
  },
  "icons": {
    "48": "assets/icons/icon48.png"
  }
}
